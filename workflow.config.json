{
  "workflow_description": {
    "name":"somatic_small_var_call",
    "version": 1.2,
    "label":"Somatic small variant calling -without annotation",
    "type":"somatic_small_var_call",
    "inputs":[
      "mapped/{sample}.bam*"
    ],
    "outputs":[
      "logs/*",
      "somatic_seq_results/*",
      "variant_calls/*",
      "merged/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "reference",
    "lib_ROI"
  ],
  "gui_params" : {
    "primary": {
      "tumor_normal_paired": {
        "label": "Samples are tumor-normal paired",
        "type": "bool",
        "default": true
      }
    },
    "detailed": {
      "somatic_use_strelka": {
        "label": "Use strelka for somatic variant calling.",
        "type": "bool",
        "default": true
      },
      "somatic_use_vardict": {
        "label": "Use vardict for somatic variant calling.",
        "type": "bool",
        "default": true
      },
      "somatic_use_mutect2": {
        "label": "Use mutect2 for somatic variant calling.",
        "type": "bool",
        "default": true
      },
      "somatic_use_lofreq": {
        "label": "Use lofreq for somatic variant calling.",
        "type": "bool",
        "default": true
      },
      "somatic_use_varscan": {
        "label": "Use varscan for somatic variant calling.",
        "type": "bool",
        "default": true
      },
      "somatic_use_muse": {
        "label": "Use muse for somatic variant calling.",
        "type": "bool",
        "default": true,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "tumor_normal_paired": true
            }
          }
        }
      },
      "somatic_use_somaticsniper": {
        "label": "Use somaticsniper for somatic variant calling.",
        "type": "bool",
        "default": true,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "tumor_normal_paired": true
            }
          }
        }
      },
      "min_variant_frequency": {
        "label": "Vardict & Final Processing: Minimal variant frequency to report",
        "type": "int",
        "default": 0
      },
      "varscan_extra_params": {
        "label": "Varscan: Extra parameters",
        "type": "string",
        "default": "--strand-filter 0 --p-value 0.95 --min-var-freq 0.05"
      }
    },
    "samples": {
      "donor": {
        "label": "Patient ID",
        "type": "string",
        "default": "",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "tumor_normal_paired": true
            }
          }
        }
      },
      "tumor_normal": {
        "label": "Tumor/normal",
        "type": "enum",
        "default": "normal",
        "list": {
          "tumor": "tumor",
          "normal": "normal"
        },
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "tumor_normal_paired": true
            }
          }
        }
      }
    }
  }
}

