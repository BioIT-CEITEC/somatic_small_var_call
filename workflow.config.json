{
  "workflow_description": {
    "name":"somatic_small_var_call",
    "version": 1.2,
    "label":"Somatic small variant calling",
    "type":"somatic_small_var_call",
    "inputs":[
      "mapped/{sample}.bam*"
    ],
    "outputs":[
      "config.json",
      "logs/*",
      "somatic_seq_results/*",
      "variant_calls/*",
      "merged/*"
    ],
    "report_index": "",
    "reports": ""
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired",
    "reference",
    "lib_ROI"
  ],
  "gui_params" : {
    "primary": {
      "callers": {
        "label": "Somatic variant callers to use",
        "type": "string",
        "default": "strelka;vardict;mutect2;somaticsniper;lofreq;muse;varscan"
      }
    },
    "detailed": {
      "min_variant_frequency": {
        "label": "Vardict & Final Processing: Minimal variant frequency to report",
        "type": "int",
        "default": 0
      },
      "varscan_extra_params": {
        "label": "Varscan: Extra parameters",
        "type": "string",
        "default": "--strand-filter 0 --p-value 0.95 --min-var-freq 0.05"
      }
    },
    "samples": {
      "donor": {
        "label": "Patient ID",
        "type": "string",
        "default": ""
      },
      "tumor_normal": {
        "label": "Tumor/normal",
        "type": "enum",
        "default": "normal",
        "list": {
          "tumor": "tumor",
          "normal": "normal"
        }
      }
    }
  }
}

